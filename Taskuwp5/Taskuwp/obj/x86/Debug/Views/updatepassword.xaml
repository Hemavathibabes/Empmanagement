<Page
    x:Class="Taskuwp.Views.updatepassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Taskuwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White" Width="430" Height="500" CornerRadius="2" HorizontalAlignment="Center" Margin="0,90,0,0"  BorderBrush="Black" BorderThickness="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" ></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>

        </Grid.RowDefinitions>



        <TextBlock Text="Update Password" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center"  >
            <Button Content="&#xE2AF;" Height="40" FontSize="19"  BorderBrush="Gray" BorderThickness="2 2 0 2" Background="Transparent" FontFamily="Segoe MDL2 Assets"></Button>
            <TextBox x:ConnectionId='5' Width="210" Name="uid" PlaceholderText="UserId" FontSize="19" BorderThickness="0 2 2 2"  Height="40" HorizontalAlignment="Center">
            </TextBox>
           
        </StackPanel>
      
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button Content="&#xE785;" FontFamily="Segoe MDL2 Assets" FontSize="19" Background="Transparent" Height="40" BorderBrush="Gray" BorderThickness="2 2 0 2"></Button>
            <PasswordBox x:ConnectionId='4' Width="210" Name="pwd" PlaceholderText="New Password" FontSize="19" BorderThickness="0 2 2 2 " PasswordChar="*"  PasswordRevealMode="Peek" Height="40"></PasswordBox>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Content="&#xE1F6;" FontFamily="Segoe MDL2 Assets" FontSize="19" Background="Transparent" Height="40" BorderBrush="Gray" BorderThickness="2 2 0 2"></Button>
            <PasswordBox x:ConnectionId='3' Width="210"   Name="reenterpwd" PlaceholderText="Confirm Password" FontSize="19" BorderThickness="0 2 2 2 " PasswordChar="*"  PasswordRevealMode="Peek" Height="40"></PasswordBox>
        </StackPanel>
       

        <Button x:ConnectionId='2' Grid.Row="4" Name="upassword"                         Width="150" FontSize="19"  HorizontalAlignment="Center" Foreground="White" Background="DarkCyan" CornerRadius="2" VerticalAlignment="Center" Content="Reset Password"></Button>

    </Grid>
</Page>

